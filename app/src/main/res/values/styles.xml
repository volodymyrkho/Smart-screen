<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimeLabelTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="DayCheckBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_day</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/day_color_selector</item>
    </style>

</resources>
